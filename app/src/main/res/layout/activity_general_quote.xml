<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:paddingTop="?attr/actionBarSize"
    android:background="@drawable/bk">

    <!-- Top Spacer to avoid notch -->
    <View
        android:id="@+id/statusSpacer"
        android:layout_width="0dp"
        android:layout_height="?attr/actionBarSize"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@android:color/transparent" />

    <!-- Welcome Message -->
    <TextView
        android:id="@+id/welcomeTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Welcome, User!"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp" />

    <!-- 8pt Contact Button -->
    <Button
        android:id="@+id/button8ptContact"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="8pt Contact"
        android:textSize="16sp"
        app:layout_constraintTop_toBottomOf="@id/welcomeTextView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="24dp" />

    <!-- 6pt Contract Button -->
    <Button
        android:id="@+id/button6ptContract"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="6pt Contract"
        android:textSize="16sp"
        app:layout_constraintTop_toBottomOf="@id/button8ptContact"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp" />

    <!-- 4pt Contract Button -->
    <Button
        android:id="@+id/button4ptContract"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="4pt Contract"
        android:textSize="16sp"
        app:layout_constraintTop_toBottomOf="@id/button6ptContract"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp" />

    <!-- 12pt Contract Button -->
    <Button
        android:id="@+id/button12ptContract"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="12pt Contract"
        android:textSize="16sp"
        app:layout_constraintTop_toBottomOf="@id/button4ptContract"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp" />

</androidx.constraintlayout.widget.ConstraintLayout>
