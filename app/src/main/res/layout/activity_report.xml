<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="?attr/actionBarSize"
    android:background="@drawable/bk">

    <!-- âœ… Only one direct child: outer LinearLayout -->
    <LinearLayout
        android:orientation="vertical"
        android:padding="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- Spacer for notch/status bar -->
        <View
            android:id="@+id/statusSpacer"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@android:color/transparent" />

        <!-- Input field for property name -->
        <EditText
            android:id="@+id/nameInput"
            android:hint="Enter Property Name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"/>

        <!-- Input field for address -->
        <EditText
            android:id="@+id/addressInput"
            android:hint="Enter Address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textMultiLine"
            android:minLines="3"
            android:gravity="top"
            android:scrollbars="vertical"/>

        <!-- Date -->
        <EditText
            android:id="@+id/dateInput"
            android:hint="Enter Date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="date"/>

        <!-- Visit type -->
        <EditText
            android:id="@+id/visitTypeInput"
            android:hint="Visit Type"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <!-- Site inspection -->
        <EditText
            android:id="@+id/siteInspectionInput"
            android:hint="Enter Site Inspection"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textMultiLine"
            android:minLines="3"
            android:gravity="top"
            android:scrollbars="vertical"/>

        <!-- Recommendations -->
        <EditText
            android:id="@+id/recommendationsInput"
            android:hint="Enter Recommendations"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textMultiLine"
            android:minLines="3"
            android:gravity="top"
            android:scrollbars="vertical"/>

        <!-- Prep steps -->
        <EditText
            android:id="@+id/prepInput"
            android:hint="Enter Prep Steps"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textMultiLine"
            android:minLines="3"
            android:gravity="top"
            android:scrollbars="vertical"/>

        <!-- Follow up -->
        <EditText
            android:id="@+id/followUpInput"
            android:hint="Enter Follow Up Details"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <!-- Technician name -->
        <EditText
            android:id="@+id/techInput"
            android:hint="Enter Technician Name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"/>

        <!-- Image button -->
        <Button
            android:id="@+id/selectImageButton"
            android:text="Add Image"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"/>

        <!-- Save button -->
        <Button
            android:id="@+id/saveButton"
            android:text="Save Report"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:backgroundTint="@android:color/holo_green_dark"/>

        <!-- Back button -->
        <Button
            android:id="@+id/backButton"
            android:text="Back to Main"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:paddingBottom="32dp"
            android:backgroundTint="@android:color/holo_red_light"/>

    </LinearLayout>
</ScrollView>
