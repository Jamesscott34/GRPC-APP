<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bk"
    android:padding="16dp">

    <!-- Welcome Message -->
    <TextView
        android:id="@+id/welcomeTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Welcome, User!"
        android:textSize="24sp"
        android:textStyle="bold"
        android:gravity="center"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="32dp" />

    <!-- Group of input fields and buttons -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        android:gravity="center_horizontal"
        app:layout_constraintTop_toBottomOf="@id/welcomeTextView"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Premise Name -->
        <EditText
            android:id="@+id/premiseNameEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Premise Name"
            android:inputType="text"
            android:layout_marginBottom="12dp" />

        <!-- Premise Address -->
        <EditText
            android:id="@+id/premiseAddressEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Premise Address"
            android:inputType="text"
            android:layout_marginBottom="12dp" />

        <!-- Reason -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Reason"
            android:textSize="16sp"
            android:layout_marginBottom="4dp" />

        <Spinner
            android:id="@+id/reasonSpinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp" />

        <!-- Price Quoted -->
        <EditText
            android:id="@+id/priceQuotedEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Price Quoted"
            android:inputType="numberDecimal"
            android:layout_marginBottom="12dp" />

        <!-- Commission -->
        <TextView
            android:id="@+id/commissionTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Commission: â‚¬0.00"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp" />

        <!-- Date -->
        <TextView
            android:id="@+id/dateTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Date: "
            android:textSize="16sp"
            android:layout_marginBottom="16dp" />

        <!-- Add Lead Button -->
        <Button
            android:id="@+id/addLeadButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Add Lead"
            android:layout_marginBottom="8dp" />

        <!-- Back Button -->
        <Button
            android:id="@+id/backButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Back" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
