<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Background color layer -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@android:color/white" /> <!-- Default background color -->
        </shape>
    </item>

    <!-- Border layer -->
    <item android:left="1dp" android:right="1dp" android:top="1dp" android:bottom="1dp">
        <shape android:shape="rectangle">
            <stroke android:width="2dp" android:color="@android:color/black" /> <!-- Black border -->
            <corners android:radius="8dp" /> <!-- Optional rounded corners -->
        </shape>
    </item>
</layer-list>
